<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ISS.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ISS.Model">
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">
        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type model:CrewMember}">
                    <model:CrewMember Name="Will" Craft="ISS" />
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:CrewMember">
                    <HorizontalStackLayout Padding="10">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label
                                FontSize="25"
                                Text="{Binding Craft}"
                                TextColor="NavajoWhite" />
                            <Label
                                FontSize="25"
                                Text="{Binding Name}"
                                TextColor="NavajoWhite" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="8"
            Text="Test" />
    </Grid>
</ContentPage>

